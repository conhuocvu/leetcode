class Solution {
    public int maxFreqSum(String s) {
        int[] freq = new int[26];
        int max1 = 0;
        int max2 = 0;
        for (int i = 0; i < s.length(); i++) {
            int idx = s.charAt(i) - 'a';
            freq[idx]++;
            if (idx == 0 || idx == 4 || idx == 8 || idx == 14 || idx == 20) {
                if (freq[idx] > max1) max1 = freq[idx];
            } else {
                if (freq[idx] > max2) max2 = freq[idx];
            }
        }
    
        return max1 + max2;
    }
}
